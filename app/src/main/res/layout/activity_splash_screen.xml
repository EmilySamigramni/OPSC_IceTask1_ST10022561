<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/opscbackground" />

    <TextView
        android:id="@+id/txt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:ems="10"
        android:fontFamily="@font/baloo"
        android:inputType="text"
        android:minHeight="48dp"
        android:text="hello world."
        android:textSize="20sp" />

    <Button
        android:id="@+id/BtnFrench"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt1"
        android:layout_centerInParent="true"
        android:text="French" />

    <Button
        android:id="@+id/BtnGerman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnFrench"
        android:layout_centerInParent="true"
        android:text="German" />

    <Button
        android:id="@+id/BtnAfrikaans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnGerman"
        android:layout_centerInParent="true"
        android:text="Afrikaans" />

    <Button
        android:id="@+id/BtnItalian"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnAfrikaans"
        android:layout_centerInParent="true"
        android:text="Italian" />

    <Button
        android:id="@+id/BtnLatin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnItalian"
        android:layout_centerInParent="true"
        android:text="Latin" />

    <Button
        android:id="@+id/BtnEnglish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BtnLatin"
        android:layout_centerInParent="true"
        android:text="English" />


</RelativeLayout>